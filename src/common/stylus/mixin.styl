border-1px-t($color)
  position:relative
  &:after
    content:''
    display:block
    position:absolute
    left:0
    top:0
    height 2px
    width:100%
    border-top 1px solid $color
    @media (min-device-pixel-ratio:1.5)
        transform:scaleY(0.75)
    @media (min-device-pixel-ratio:2)
        transform:scaleY(0.5)

